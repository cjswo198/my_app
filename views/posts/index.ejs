<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <div class = "posts">
      <% include partials/top %>
      <div class = "index">
        <a href = "/posts/new"><button>New</button></a>
        <ul>
          <li class = "header"> Title <span>Date</span></li>
          <% data.forEach(function(e){ %>
              <li>
                  <a href="/posts/<%=e._id%>"><%= e.title %></a>
                  <span><%=e.createdAt.toLocaleDateString() %></span>
              </li>
          <%})%>
        </ul>
      </div>

      <ul class="pagination">
          <% var offset = 3; %>
          <% for(i = 1; i <=maxPage; i++){ %>
            <%  if(i<=offset || i>maxPage-offset || (i>=page-(offset-1) && i<=page+(offset-1))){%>
              <%    if(i != page){%>
                    <li>[<a href = "/posts?pageNum=<%=i%>"><%=i%></a>]<li>
                 <% }else{ %>
                    <li> [ <b><%=i%></b> ] </li>
                 <% } %>
             <% } else if(i == offset+1 || i == maxPage-offset){ %>
                    <li>...</li>
             <% } %>
          <% } %>
      </ul>



    </div>
    <footer>
        <% include ../partials/footer %>
    </footer>
  </body>
</html>
